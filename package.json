{
  "name": "react-boilerplate",
  "version": "0.1.0",
  "private": true,
  "description": "React boilerplate",
  "repository": {
    "type": "git",
    "url": "git+https://bitbucket.org/district01/react-boilerplate.git"
  },
  "author": "Kevin Decock <kevin.decock@district01.be>",
  "district01": {
    "projectsheet": "https://bitbucket.org/district01/react-boilerplate/overview"
  },
  "license": "ISC",
  "dependencies": {
    "classnames": "^2.2.5",
    "create-react-context": "0.2.1",
    "dotenv": "4.0.0",
    "object-assign": "4.1.1",
    "promise": "8.0.1",
    "prop-types": "git+https://github.com/ambewas/prop-types.git",
    "ramda": "^0.24.1",
    "react": "^16.0.0",
    "react-component-tree": "^2.0.0-beta.14",
    "react-dnd": "2.5.4",
    "react-dnd-html5-backend": "2.5.4",
    "react-dom": "^16.0.0",
    "react-helmet": "^5.1.3",
    "react-json-renderer": "^0.5.3",
    "react-radio-group": "^3.0.2",
    "react-redux": "^5.0.5",
    "react-router-dom": "^4.1.1",
    "react-sortable-hoc": "^0.6.7",
    "react-test-renderer": "^16.0.0",
    "redux": "^3.7.2",
    "redux-devtools": "^3.4.0",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.2.0",
    "uuid": "^3.1.0"
  },
  "devDependencies": {
    "@district01/eslint-config": "2.0.0",
    "autoprefixer": "7.1.4",
    "babel-core": "6.26.0",
    "babel-eslint": "8.0.1",
    "babel-jest": "21.2.0",
    "babel-loader": "7.1.2",
    "babel-preset-react-app": "^3.0.1",
    "babel-runtime": "6.26.0",
    "case-sensitive-paths-webpack-plugin": "2.1.1",
    "chalk": "2.1.0",
    "css-loader": "0.28.7",
    "eslint": "4.7.2",
    "eslint-config-react-app": "^2.0.1",
    "eslint-loader": "1.9.0",
    "eslint-plugin-flowtype": "2.36.0",
    "eslint-plugin-import": "2.7.0",
    "eslint-plugin-jsx-a11y": "6.0.2",
    "eslint-plugin-react": "^7.1.0",
    "extract-text-webpack-plugin": "3.0.0",
    "file-loader": "0.11.2",
    "fs-extra": "4.0.2",
    "html-webpack-plugin": "2.30.1",
    "jest": "21.2.0",
    "node-sass": "^4.0.0",
    "postcss-flexbugs-fixes": "3.2.0",
    "postcss-loader": "2.0.6",
    "react-dev-utils": "^4.1.0",
    "react-error-overlay": "^2.0.2",
    "sass-loader": "^6.0.6",
    "style-loader": "0.18.2",
    "sw-precache-webpack-plugin": "0.11.4",
    "url-loader": "0.5.9",
    "webpack": "3.6.0",
    "webpack-dev-server": "2.8.2",
    "webpack-manifest-plugin": "1.3.2",
    "whatwg-fetch": "2.0.3"
  },
  "scripts": {
    "start": "node scripts/start.js",
    "build": "node scripts/build.js",
    "test": "node scripts/test.js --env=jsdom",
    "projectsheet": "open $npm_package_district01_projectsheet"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "setupFiles": [
      "<rootDir>/config/polyfills.js"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.js?(x)",
      "<rootDir>/src/**/?(*.)(spec|test).js?(x)"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ],
    "moduleNameMapper": {
      "^react-native$": "react-native-web"
    },
    "moduleFileExtensions": [
      "web.js",
      "js",
      "json",
      "web.jsx",
      "jsx"
    ]
  },
  "babel": {
    "presets": [
      "react-app"
    ]
  }
}
